{
  "name": "sui-studio",
  "version": "1.0.0",
  "description": "Sui Move Development IDE - Desktop Application",
  "author": "Sui Studio Team",
  "license": "MIT",
  "main": "electron/main.js",
  "homepage": "https://suistudio.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sui-studio.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:windows": "npm run build && electron-builder --windows",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:all": "npm run build && electron-builder --linux --windows",
    "electron:package": "npm run build && electron-builder --dir",
    
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@mysten/dapp-kit": "^0.19.9",
    "@mysten/sui": "^1.45.2",
    "@react-oauth/google": "^0.12.2",
    "@tanstack/react-query": "^5.90.10",
    "@types/peerjs": "^0.0.30",
    "@types/react-router-dom": "^5.3.3",
    "autoprefixer": "^10.4.22",
    "framer-motion": "^12.23.24",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.554.0",
    "peerjs": "^1.5.5",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "simple-peer": "^9.11.1",
    "tailwindcss": "^4.1.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^1.6.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7",
    "jsdom": "^23.2.0",
    "typescript": "~5.8.2",
    "vite": "^6.4.1",
    "vitest": "^1.6.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "extends": "./electron-builder.yml"
  }
}
